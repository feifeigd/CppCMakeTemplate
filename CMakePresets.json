{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },

    "include": [

    ],

    "configurePresets": [{
        "name": "common-Debug",
        "hidden": true,
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Debug"
        }
    },{
        "name": "common-Release",
        "hidden": true,
        "cacheVariables": {
            "CMAKE_BUILD_TYPE": "Release"
        }
    },{
        "name": "windows-base",
        "hidden": true,
        "architecture": {
            "value": "x64",
            "strategy": "external"
        },
        "generator": "Visual Studio 17 2022",
        "cacheVariables": {
            "CMAKE_C_COMPILER": "cl.exe",
            "CMAKE_CXX_COMPILER": "cl.exe"
        },
        "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Windows"
        },
        "toolchainFile": "D:\\vcpkg\\scripts\\buildsystems\\vcpkg.cmake"
    },{
        "name": "win-x64-debug",
        "displayName": "win-x64-debug",
        "inherits": ["windows-base", "common-Debug"],
        "binaryDir": "${sourceDir}/build/windows/debug",
        "installDir": "${sourceDir}/build/windows/debug/install"
    },{
        "name": "win-x64-release",
        "displayName": "win-x64-release",
        "inherits": ["windows-base", "common-Release"],
        "binaryDir": "${sourceDir}/build/windows/release",
        "installDir": "${sourceDir}/build/windows/release/install"
    },{
        "name": "linux-base",
        "hidden": true,
        "architecture": {
            "value": "x64",
            "strategy": "external"
        },
        "condition": {
            "type": "equals",
            "lhs": "${hostSystemName}",
            "rhs": "Linux"
        },
        "toolchainFile": "~/code/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },{
        "name": "linux-x64-debug",
        "displayName": "linux-x64-debug",
        "inherits": ["linux-base", "common-Debug"],
        "binaryDir": "${sourceDir}/build/linux/debug",
        "installDir": "${sourceDir}/build/linux/debug/install"
    },{
        "name": "linux-x64-release",
        "displayName": "linux-x64-release",
        "inherits": ["linux-base", "common-Release"],
        "binaryDir": "${sourceDir}/build/linux/release",
        "installDir": "${sourceDir}/build/linux/release/install"
    }],
    "buildPresets": [{
        "name": "win-x64-debug",
        "displayName": "win-x64-debug",
        "configurePreset": "win-x64-debug"
    },{
        "name": "win-x64-release",
        "displayName": "win-x64-release",
        "configurePreset": "win-x64-release"
    },{
        "name": "linux-x64-debug",
        "displayName": "linux-x64-debug",
        "configurePreset": "linux-x64-debug"
    },{
        "name": "linux-x64-release",
        "displayName": "linux-x64-release",
        "configurePreset": "linux-x64-release"
    }]
}
